@model BannerUpdateDto

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">Banner Güncelle</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page"> Banner Güncelle </li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <form class="forms-sample" asp-controller="Banner" asp-action="Update" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="Title" for="exampleInputName1">Başlık</label>
                                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Subtitle" for="exampleInputName1">Alt Başlık</label>
                                    <input asp-for="Subtitle" type="text" class="form-control" id="exampleInputName1" placeholder="Alt Başlık" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" for="exampleTextarea1">Açıklama</label>
                                    <textarea asp-for="Description"
                                              class="form-control"
                                              id="exampleTextarea1"
                                              rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                                <button type="submit" class="btn btn-primary mr-2"> Güncelle </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("AdminFooter")
    </div>
</div>
