@using Entity.DTOs.Categories
@model List<CategoryDto>

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">Kategoriler</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page"> Kategoriler </li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                           
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Kategori İsmi</th>
                                            <th>Oluşturulma Tarihi</th>
                                            <th>Oluşturan</th>
                                            <th>Durumu</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var category in Model)
                                        {
                                            <tr>
                                                <td>@category.Name</td>
                                                <td>
                                                    @category.CreatedDate.ToString()
                                                </td>
                                                <td>@category.CreatedBy</td>
                                                <td>@category.IsDeleted</td>
                                                <td>
                                                    <a data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@category.Id">
                                                        <button type="button" class="btn btn-success btn-md">Güncelle</button>
                                                    </a>
                                                    <a data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id">
                                                        <button type="button" class="btn btn-danger btn-md">Sil</button>
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        @await Component.InvokeAsync("AdminFooter")
    </div>
</div>
